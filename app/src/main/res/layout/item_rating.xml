<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fotoProfile"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/sulistyo"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/namaReviewer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sulistyo Budi"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"/>

                <TextView
                    android:id="@+id/tanggalRiviewer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2h Ago"
                    android:layout_marginStart="15dp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/bintang"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/bintangisi"
                android:layout_marginStart="70dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/bintang2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/bintangisi"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/bintang3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/bintangisi"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/bintang4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/bintangisi"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/bintang5"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/bintangisi"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
        
        <TextView
            android:id="@+id/isiReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/review1"
            android:textColor="@color/black"/>
    </LinearLayout>
    
</LinearLayout>