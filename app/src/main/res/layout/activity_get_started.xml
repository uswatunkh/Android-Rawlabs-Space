<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgetstarted"
    tools:context=".rawlabspace.GetStarted">

    <androidx.cardview.widget.CardView
        android:layout_width="378dp"
        android:layout_height="254dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="453dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/judulText"
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="-4sp"
            android:text="@string/getStared"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/isiText"
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:text="@string/getStared2"
            android:layout_marginTop="115dp"
            android:layout_marginStart="45dp"
            android:gravity="center_horizontal|top"/>

        <ImageButton
            android:id="@+id/getStartedBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="190dp"
            android:background="@drawable/btngets"
            android:text="Gabb"
            android:textAlignment="center" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>